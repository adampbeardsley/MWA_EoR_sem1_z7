	Date-Modified = {2014-08-31 18:47:17 +0000},
	Journal = {The Astrophysical Journal},
	Keywords = {wedge},
	Number = {1},
	Pages = {101},
	Title = {The Impact of Point-source Subtraction Residuals on 21 cm Epoch of Reionization Estimation},
